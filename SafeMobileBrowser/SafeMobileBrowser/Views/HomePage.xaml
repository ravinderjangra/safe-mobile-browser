<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="SafeMobileBrowser.Views.HomePage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:SafeMobileBrowser.Controls"
             BackgroundColor="White"
             Padding="0">
    <NavigationPage.TitleView>
        <StackLayout x:Name="stackLayout"
                     Padding="10,3"
                     HorizontalOptions="FillAndExpand"
                     Orientation="Horizontal"
                     VerticalOptions="Start">

            <!--<Frame x:Name="TabCountFrame"
                   Padding="0"
                   BackgroundColor="#515151"
                   CornerRadius="2"
                   HasShadow="False"
                   HeightRequest="25"
                   VerticalOptions="Center"
                   WidthRequest="25">
                <Frame Margin="2"
                       Padding="4,0,4,4"
                       BackgroundColor="White"
                       CornerRadius="2"
                       HasShadow="False">
                    <Label BackgroundColor="Transparent"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           Text="5"
                           TextColor="Black"
                           VerticalOptions="Start" />
                </Frame>
            </Frame>-->

            <Frame Padding="5,2"
                   BackgroundColor="#F1F1F1"
                   CornerRadius="20"
                   HasShadow="False"
                   HorizontalOptions="FillAndExpand">
                <Grid Padding="5,2"
                      HeightRequest="30"
                      ColumnSpacing="1"
                      HorizontalOptions="FillAndExpand">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Label BackgroundColor="Transparent"
                           FontSize="14"
                           Text="safe://"
                           TextColor="DarkGreen"
                           VerticalOptions="Center" />

                    <controls:AddressBarEntry x:Name="AddressBarEntry"
                                              Grid.Column="1"
                                              FontSize="14"
                                              HorizontalOptions="FillAndExpand"
                                              Placeholder="enter url"
                                              PlaceholderColor="DarkGray"
                                              VerticalOptions="Center"
                                              Text="{Binding AddressbarText}"/>

                    <Image x:Name="AddressBarButton"
                           Grid.Column="2"
                           HeightRequest="15"
                           HorizontalOptions="End"
                           Source="refresh" />
                </Grid>
            </Frame>

            <!--<Image x:Name="SettingsButton"
                   HeightRequest="15"
                   Source="menu" />-->

        </StackLayout>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <StackLayout HorizontalOptions="FillAndExpand"
                     Margin="0"
                     Padding="0"
                     Spacing="0"
                     VerticalOptions="FillAndExpand">

            <controls:AdvancedProgressBar IsRunning="False"
                                          IsVisible="False"
                                          HeightRequest="5"
                                          BackgroundColor="Transparent">
                <controls:AdvancedProgressBar.Triggers>
                    <DataTrigger TargetType="controls:AdvancedProgressBar"
                                 Binding="{Binding Source={x:Reference HybridWebViewControl}, Path=IsLoading}"
                                 Value="True">
                        <Setter Property="IsRunning" Value="True" />
                        <Setter Property="IsVisible" Value="True" />
                    </DataTrigger>
                </controls:AdvancedProgressBar.Triggers>
            </controls:AdvancedProgressBar>
            
            <controls:HybridWebView x:Name="HybridWebViewControl"
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand"
                                    Uri="{Binding Url}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
